pipeline {
    agent any
 triggers  {pollSCM('H/05 * * * *') }

    stages {
        stage('scm') {
            steps {
                git branch: 'A27', url: 'https://github.com/ANTONYDAVID96/mvn-demo.git'
            }
        }
     stage('build') {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
            }
        }
        stage('deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'web1', path: '', url: 'http://34.224.86.128:8081/')], contextPath: 'david', war: '**/*.war'
            }
        }
    }
}
